# Production Environment Variables
NODE_ENV=production
PORT=8080

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@your-db-host:5432/esgnavigator

# Redis Cache
REDIS_URL=redis://your-redis-host:6379

# Anthropic Claude API
ANTHROPIC_API_KEY=your-production-anthropic-key

# IBM Watsonx (Optional)
WATSONX_API_KEY=your-watsonx-key
WATSONX_PROJECT_ID=your-project-id

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars

# Frontend URL
FRONTEND_URL=https://www.esgnavigator.ai

# CORS
ALLOWED_ORIGINS=https://www.esgnavigator.ai,https://esgnavigator.ai

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/production.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
