# ============================================================================
# ESG Navigator - Web Application Environment Variables
# ============================================================================
# Copy this file to .env.local for local development
# For production, configure these in Vercel Dashboard → Settings → Environment Variables

# ============================================================================
# REQUIRED - API Configuration
# ============================================================================

# Public API URL (exposed to browser)
# Production: https://www.esgnavigator.ai or https://api.esgnavigator.ai
# Development: http://localhost:5050
NEXT_PUBLIC_API_URL=http://localhost:5050

# Backend API URL (server-side only)
# Used for server-side API calls and proxying
# Production: https://api.esgnavigator.ai
# Development: http://localhost:5050
API_BACKEND_URL=http://localhost:5050

# WebSocket URL for real-time features
# Production: wss://www.esgnavigator.ai/realtime
# Development: ws://localhost:5050/realtime
NEXT_PUBLIC_WS_URL=ws://localhost:5050/realtime

# ============================================================================
# REQUIRED - Environment
# ============================================================================

# Application environment
# Values: development | production | staging
NEXT_PUBLIC_ENV=development

# ============================================================================
# OPTIONAL - API Proxy Configuration
# ============================================================================

# API Base URL for proxy (if using serverless functions)
# Only needed if proxying API requests through Next.js API routes
API_BASE=http://localhost:5050

# Shared secret for API proxy authentication
# Generate with: openssl rand -hex 32
API_PROXY_KEY=your-secure-proxy-key-here

# Alternative proxy secret name
PROXY_SHARED_SECRET=your-secure-proxy-key-here

# ============================================================================
# OPTIONAL - Email Configuration (for email sending features)
# ============================================================================

# Email provider: sendgrid | smtp | ses
MAIL_PROVIDER=sendgrid

# SendGrid API Key (if using SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# From email address
FROM_ADDRESS=noreply@esgnavigator.ai

# Reply-to email address
REPLY_TO=support@tisholdings.co.za

# BCC email addresses (comma-separated)
DEFAULT_BCC=

# Test mode (set to false in production)
TEST_MODE=true

# ============================================================================
# OPTIONAL - Feature Flags
# ============================================================================

# Enable analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Enable error reporting (e.g., Sentry)
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Enable chat widget
NEXT_PUBLIC_ENABLE_CHAT=true

# Enable AI insights
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true

# ============================================================================
# OPTIONAL - External Services
# ============================================================================

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# Intercom App ID for customer support chat
NEXT_PUBLIC_INTERCOM_APP_ID=

# ============================================================================
# DEVELOPMENT ONLY - Do not set in production
# ============================================================================

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Debug mode
DEBUG=false

# ============================================================================
# DEPLOYMENT NOTES
# ============================================================================
#
# Vercel Deployment:
# ------------------
# 1. Go to Vercel Dashboard → Your Project → Settings → Environment Variables
# 2. Add the following REQUIRED variables:
#    - NEXT_PUBLIC_API_URL=https://www.esgnavigator.ai (or https://api.esgnavigator.ai)
#    - API_BACKEND_URL=https://api.esgnavigator.ai
#    - NEXT_PUBLIC_WS_URL=wss://www.esgnavigator.ai/realtime
#    - NEXT_PUBLIC_ENV=production
#
# 3. Add OPTIONAL variables as needed for your deployment
#
# 4. Set environment scope:
#    - Production: for main branch deployments
#    - Preview: for PR preview deployments
#    - Development: for local development (use .env.local instead)
#
# Docker Deployment:
# ------------------
# 1. Copy this file: cp .env.example .env
# 2. Update values in .env
# 3. Reference in docker-compose.yml or pass as --env-file
#
# Local Development:
# ------------------
# 1. Copy this file: cp .env.example .env.local
# 2. Update values in .env.local
# 3. .env.local is gitignored and safe for local secrets
#
# Security Notes:
# ---------------
# - NEVER commit .env.local, .env.production, or .env files to git
# - Keep API keys and secrets secure
# - Rotate secrets regularly
# - Use environment-specific values
# - Validate all environment variables in code before use
#
# ============================================================================
