# ESG Navigator AWS Deployment Parameters
# Copy this file to parameters.env and fill in the values

# AWS Configuration
export AWS_REGION="us-east-1"
export ENVIRONMENT="production"

# Database Configuration
export DB_PASSWORD="your-secure-database-password-here"
export MULTI_AZ="false"  # Set to "true" for production high availability

# SSL/TLS Certificate
# Create a certificate in AWS Certificate Manager and provide the ARN
export CERTIFICATE_ARN="arn:aws:acm:us-east-1:YOUR_ACCOUNT_ID:certificate/YOUR_CERTIFICATE_ID"

# Application Secrets
export JWT_SECRET="your-jwt-secret-at-least-32-characters-long"
export ANTHROPIC_API_KEY="your-anthropic-api-key"

# Application URLs
export FRONTEND_URL="https://www.esgnavigator.ai"
export NEXT_PUBLIC_API_URL="https://www.esgnavigator.ai"

# Optional: SendGrid Configuration
export SENDGRID_API_KEY="your-sendgrid-api-key"
export FROM_ADDRESS="noreply@esgnavigator.ai"
export REPLY_TO="support@esgnavigator.ai"

# Docker Image Tag (optional, defaults to "latest")
export IMAGE_TAG="latest"
